<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="projects.arielcatli.aquabot">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_v0"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenuActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu_GraphActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_main_menu__graph"

            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MainMenu_SwitchActivity"
            android:label="@string/title_activity_main_menu__switch"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>